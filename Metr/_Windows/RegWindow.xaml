<Window x:Class="Metr.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metr"
        mc:Ignorable="d"
        Title="Запрос на добавление учётной записи" Width="340" ResizeMode="NoResize" Height="400">
    <Viewbox>
    <StackPanel Width="340">
        <Label Margin="5" Content="ФИО"/>
        <TextBox Margin="5" FontSize="20" x:Name="fNameTxt"/>
        <Label Margin="5" Content="Логин"/>
        <TextBox Margin="5" FontSize="20" x:Name="lTxt"/>
        <Label Margin="5" Content="Пароль"/>
        <TextBox Margin="5" FontSize="20" x:Name="pTxt"/>
        <Label Margin="5" Content="E-Mail (не обязательно)"/>
        <TextBox Margin="5" FontSize="20" x:Name="mTxt"/>
        <Button Margin="15" Content="Отправить" x:Name="cBtn" Background="White" BorderBrush="White" Click="cBtn_Click"/>
    </StackPanel>
    </Viewbox>
</Window>
