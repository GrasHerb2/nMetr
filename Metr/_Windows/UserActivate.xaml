<Window x:Class="Metr.UserActivate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metr"
        mc:Ignorable="d"
        Title="UserActivate" Height="254" Width="430">
    <Viewbox>
    <StackPanel>
        <TextBlock Margin="15" x:Name="infoText" MaxHeight="130" Height="130" Width="400" TextWrapping="Wrap"/>
        <ComboBox x:Name="roleCmb" Margin="15,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Принять" Margin="15" Height="25" Width="100" x:Name="acceptBtn" Click="acceptBtn_Click"/>
            <Button Content="Отмена" Margin="15" Height="25" Width="100" x:Name="cancelBtn" Click="cancelBtn_Click"/>
        </StackPanel>
    </StackPanel>
    </Viewbox>
</Window>
