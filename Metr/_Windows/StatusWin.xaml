<Window x:Class="Metr._Windows.StatusWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metr._Windows"
        mc:Ignorable="d"
        Title="StatusWin" Height="100" Width="260" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <TextBlock x:Name="statusTb" Text="{Binding stString, NotifyOnTargetUpdated=True}" TargetUpdated="statusChange" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
